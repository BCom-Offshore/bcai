# BCom AI Services API - PostgreSQL v18 Configuration
# Copy this file to .env and fill in your actual values

# PostgreSQL Database Configuration
# Format: postgresql+psycopg://username:password@host:port/database
# NOTE: Special characters in password must be URL-encoded:
#   @ = %40, : = %3A, # = %23, / = %2F
# Example: password "P@ssw0rd" becomes "P%40ssw0rd"
DATABASE_URL=postgresql+psycopg://postgres:P%40ssw0rd@localhost:5432/bcai

# FastAPI Configuration
DEBUG=False
PROJECT_NAME=BCom AI Services API
API_V1_PREFIX=/api/v1

# JWT Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3010,http://localhost:8010,https://yourdomain.com

# Optional: PostgreSQL Connection Pool Settings
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=40
# DB_POOL_RECYCLE=3600
